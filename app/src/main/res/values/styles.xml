<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StyleButton">
        <!-- Customization of RadioButton and CheckBox for Quiz Activity -->
        <item name="android:onClick">submitButton</item>
        <item name="android:textColor">#273746</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textView">
        <!-- Customization of TextView for Quiz Activity -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:color">#1C2833</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
